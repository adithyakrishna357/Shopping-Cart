<section>
    <div class="containeer">
        <div class="row" >
            <div class="d-flex pe-5 pt-3">
                <a href="/admin/add-product" class="btn btn-success ms-auto">Add Products</a>
            </div>
            
        </div>
        <div class="mt-3">
        <table class="table" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.Name}}</td>
      <td><img style="width:50px; height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick=" return confirm('Are you want  to delete {{this.name}}')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
    </div>
</section>
<script>

  $(function (){
    $('#productsTable').DataTable();
  });
</script>